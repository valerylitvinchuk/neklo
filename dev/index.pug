				form
					input(
						type="text"
						placeholder="Введите имя")
					input(
						type="email"
						placeholder="Введите email")
					textarea(placeholder="Введите текст")
					each value in ['1', '2', '3']
						.input-wrapper
							input(
								id="check" + value
								type="checkbox"
								name="check"
								value="option" + value)
							i.check-icon
							label.check-label(for="check" + value) Checkbox #{value}
					each value in ['1', '2', '3']
						.input-wrapper
							input(
								id="radio" + value
								type="radio"
								name="radio-btn"
								checked)
							i.radio-icon
							label.radio-label(for="radio" + value) Radio #{value}
