		header
			.container
				ul.menu__list
					each value in ['home', 'technologies and other', 'magento', 'beacons', 'startup']
						li.menu__item
							a.menu__link(href="#")= value
							ul.menu__list.menu__list_drop
								each value in ['about us', 'career', 'vacancies', 'our mission']
									li.menu__item.menu__item_drop
										a.menu__link.menu__link_drop(href="#")= value
