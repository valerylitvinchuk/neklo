doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1")
		title Тестовое задание
		link(
			rel="stylesheet"
			href="bower/normalize-css/normalize.css")
		link(
			rel="stylesheet"
			href="css/main.css")
